{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "lib": ["esnext", "dom", "dom.iterable"],
    "noEmit": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/dist"]
}
